{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src", "src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
